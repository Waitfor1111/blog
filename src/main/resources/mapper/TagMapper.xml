<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- tag -->
<mapper namespace="com.duyi.springbootblog.dao.TagDao">
    <!-- This code was generated by TableGo tools, mark 1 begin. -->
    <!-- 字段映射 -->
    <resultMap id="tagMap" type="com.duyi.springbootblog.domain.Tag">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="blog_count" property="blogCount"/>
        <result column="create_time" property="createTime"/>
    </resultMap>
    <!-- This code was generated by TableGo tools, mark 1 end. -->

    <!-- This code was generated by TableGo tools, mark 2 begin. -->
    <!-- 表查询字段 -->
    <sql id="allColumns">
        t.id, t.name, t.blog_count, t.create_time
    </sql>
    <!-- This code was generated by TableGo tools, mark 2 end. -->

    <!-- 查询所有数据 -->
    <select id="findTagAll" resultMap="tagMap">
        SELECT
        <include refid="allColumns"/>
        FROM tag t
    </select>

    <!-- 根据条件参数查询数据列表 -->
    <select id="findTagByCondition" resultMap="tagMap" parameterType="map">
        SELECT
        <include refid="allColumns"/>
        FROM tag t WHERE 1 = 1
        <if test="name != null and name != ''">
            AND t.name LIKE CONCAT('%', #{name}, '%')
        </if>
        <if test="blogCount != null">
            AND t.blog_count = #{blogCount}
        </if>
        <if test="tagState != null">
            AND t.tag_state = #{tagState}
        </if>
        <if test="createTime != null">
            AND t.create_time = #{createTime}
        </if>
    </select>

    <select id="findByName" resultType="Tag">
        SELECT
        <include refid="allColumns"/>
        FROM tag t WHERE name = #{name}
    </select>

    <!-- 根据主键查询数据 -->
    <select id="findTagByIds" resultMap="tagMap" parameterType="list">
        SELECT
        <include refid="allColumns"/>
        FROM tag t WHERE t.id IN
        <foreach collection="list" index="index" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>


    <!-- 插入数据 -->
    <insert id="insertTag">
        INSERT INTO tag (
        id, name, blog_count, create_time) VALUES (
            #{id},
            #{name},
            #{blogCount},
            #{createTime}
        )
    </insert>

    <!-- 修改数据 -->
    <update id="updateTag" parameterType="tag">
        UPDATE tag
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="blogCount != null">
                blog_count = #{blogCount},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
<!--            <if test="tagState != null">-->
<!--                tag_state = #{tagState}-->
<!--            </if>-->
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delTags" parameterType="tag">
        delete from tag
        <where>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="blogCount != null">
                blog_count = #{blogCount},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="id != null">
                id = #{id}
            </if>
        </where>
    </delete>


    <update id="tagUpdate">
        UPDATE tag
        <set>
            <if test="name != null and name != ''">
                blog_count = blog_count+1
                where name = #{name}
            </if>
        </set>
    </update>

</mapper>